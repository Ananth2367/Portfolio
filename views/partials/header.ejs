<header class="bg-transparent py-4 md:py-6 px-4 fixed w-full z-50 backdrop-blur-sm">
  <nav class="container mx-auto flex justify-between items-center">
    <!-- Logo/Branding -->
    <a href="#" class="text-xl md:text-2xl font-bold text-gray-800 glass-card px-3 py-1 md:px-4 md:py-2 rounded-lg transition-transform hover:scale-105">
      <%= portfolioData.name %>
    </a>

    <!-- Desktop Navigation -->
    <div class="hidden md:flex space-x-2 md:space-x-4">
      <a href="#summary" class="nav-link glass-card px-3 py-1 md:px-4 md:py-2 rounded-lg hover:text-accent-blue transition-all duration-200">
        About
      </a>
      <a href="#projects" class="nav-link glass-card px-3 py-1 md:px-4 md:py-2 rounded-lg hover:text-accent-blue transition-all duration-200">
        Projects
      </a>
      <a href="#contact" class="nav-link glass-card px-3 py-1 md:px-4 md:py-2 rounded-lg hover:text-accent-blue transition-all duration-200">
        Contact
      </a>
      <!-- Resume Link -->
      <a href="https://drive.google.com/file/d/1hIQSKRIxCxsIFtMSVBQVVYuaIflSz403/view?usp=sharing" 
         target="_blank"
         rel="noopener noreferrer"
         class="nav-link glass-card px-3 py-1 md:px-4 md:py-2 rounded-lg hover:text-accent-blue transition-all duration-200 flex items-center gap-1"
         aria-label="Download Resume">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 md:h-5 w-4 md:w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        <span class="hidden md:inline">Resume</span>
      </a>
    </div>

    <!-- Mobile Hamburger Menu -->
    <button class="md:hidden glass-card p-2 rounded-lg focus:outline-none focus:ring-2 focus:ring-accent-blue" 
            id="mobile-menu-button"
            aria-label="Toggle menu">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
      </svg>
    </button>
  </nav>

  <!-- Mobile Menu Dropdown - Changed from glass-panel to bg-white/90 for more opacity -->
  <div class="md:hidden hidden bg-white/90 backdrop-blur-md mt-2 mx-4 rounded-lg shadow-xl" id="mobile-menu">
    <div class="flex flex-col space-y-2 p-4">
      <a href="#summary" class="mobile-nav-link block py-3 px-4 hover:bg-gray-100/50 rounded-lg transition">About</a>
      <a href="#projects" class="mobile-nav-link block py-3 px-4 hover:bg-gray-100/50 rounded-lg transition">Projects</a>
      <a href="#contact" class="mobile-nav-link block py-3 px-4 hover:bg-gray-100/50 rounded-lg transition">Contact</a>
      <a href="https://drive.google.com/file/d/1hIQSKRIxCxsIFtMSVBQVVYuaIflSz403/view?usp=sharing" 
         target="_blank"
         rel="noopener noreferrer"
         class="mobile-nav-link block py-3 px-4 hover:bg-gray-100/50 rounded-lg transition flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M3 17a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm3.293-7.707a1 1 0 011.414 0L9 10.586V3a1 1 0 112 0v7.586l1.293-1.293a1 1 0 111.414 1.414l-3 3a1 1 0 01-1.414 0l-3-3a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
        Resume
      </a>
    </div>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  document.getElementById('mobile-menu-button').addEventListener('click', function() {
    const menu = document.getElementById('mobile-menu');
    menu.classList.toggle('hidden');
    menu.classList.toggle('animate-fadeIn');
  });
</script>